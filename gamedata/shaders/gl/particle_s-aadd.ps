#include "common.h"
#include "iostructs\p_particle.h"


//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
float4 _main ( v2p I )
{
	// color = 0 	-> color=1
	// color = 1	-> color=c
	float4	c 	= 	I.c*tex2D	(s_base,I.tc0);
		c.xyz	*= 	c.w;
	float3 	r	= 	float3(1,1,1)-c.xyz+c.xyz*c.xyz;	// lerp(1,c.xyz,c.xyz), can't be less than .5f
	return	float4(r,1);
}
