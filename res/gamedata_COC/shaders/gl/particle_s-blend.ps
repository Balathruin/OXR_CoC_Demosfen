#include "common.h"
#include "iostructs\p_particle.h"


//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
float4 _main ( v2p I )
{
	// alpha = 0 	-> color=1
	// alpha = 1	-> color=c
	float4	c 	= I.c*tex2D	(s_base,I.tc0);
	float3 	r 	= lerp(float3(1,1,1),c.xyz,c.w);
	return	float4(r,1);
}
