;--- collide -------------------------------------------------------------------
;-------------------------------------------------------------------------------

[collide]
not_collide_parts    

;-------------------------------------------------------------------------------
;--- destroyed part ------------------------------------------------------------
;-------------------------------------------------------------------------------

[destroyed]
dynamics\vehicles\apc\part\apc_part_01
dynamics\vehicles\apc\part\apc_part_02
