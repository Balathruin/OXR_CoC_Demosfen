[sr_idle@reward]
on_info = {+jup_b32_scanner_reward} sr_idle@wait_for_addon %+jup_b32_task_end -jup_b32_task_start%

[sr_idle@wait_for_addon]
on_info = {+jup_b32_task_addon_start} sr_idle@get_scanners_2 %-jup_b32_scanners_tranferred =give_task(jup_b32_get_scanners_addon_task)%

[sr_idle@get_scanners_2]
on_info = {+jup_b32_scanners_tranferred} sr_idle@nil %=give_task(jup_b32_addon_task_1) =give_task(jup_b32_addon_task_2)% 

