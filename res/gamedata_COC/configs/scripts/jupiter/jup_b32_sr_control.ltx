on_info = {+jup_b32_task_start} sr_idle@get_scanners %=give_task(jup_b32_get_scanners_task)%

[sr_idle@get_scanners]
on_info = {+jup_b32_scanners_tranferred} sr_idle@place_scanners %=give_task(jup_b32_task_1) =give_task(jup_b32_task_2) =give_task(jup_b32_task_3)%

