on_info = {+jup_b4_monolith_squad_out -jup_b4_freedom_leader_stop_sound} %=stop_sound +jup_b4_freedom_leader_stop_sound%
meet = no_meet

[walker@3]
use_camp = false
path_walk = freedom_leader_2_walk
path_look = freedom_leader_2_look
combat_ignore_cond = {-jup_b4_monolith_squad_out} true
on_info = {+jup_b4_freedom_monolit_soldier_2_near_fire +jup_b4_freedom_monolit_soldier_3_near_fire +jup_b4_freedom_monolit_leader_near_fire -jup_b4_freedom_squad_leader_speech_sound} %=play_sound(jup_b4_freedom_squad_leader_speech)%
