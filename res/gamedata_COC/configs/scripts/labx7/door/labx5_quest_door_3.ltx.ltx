[logic]
active = ph_door@locked

[ph_door@locked]
closed = true
locked = true
snd_open_start = trader_door_locked
tip_open = tip_door_locked
on_info = {+labx5_b1_first_door_open} ph_door@open

[ph_door@unlocked]
closed = true
locked = false
on_use = ph_door@open
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
snd_init = door_servomotor

[ph_door@closed]
closed = true
locked = false
on_use = ph_door@open
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop

[ph_door@open]
closed = false
locked = false
on_use = ph_door@closed
on_game_timer = 50 | ph_door@unlocked
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
snd_init = door_servomotor