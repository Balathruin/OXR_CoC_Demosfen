	if ((weather == "clear") or (weather == "foggy") or (weather == "veryfoggy"))
	and (level.get_time_hours() >= 4) and (level.get_time_hours() < 20)  and (rain_factor > 0.05)
	then
		if not fog_particles then
			fog_particles = particles_object("a_ufp_particles\\fog_move")
		end
		
		local pos = db.actor:position()
		local apos = pos.y
		pos:add(device().cam_dir:mul(200))
		pos.y = utils.clamp(apos,pos.y,6)+1
		
		if (time_global() > fog_update) then
			fog_update = time_global()+fog_time
			fog_particles:play_at_pos(pos)
			--printf("fog_play")
		end
	elseif (fog_particles and fog_particles:playing()) then
		fog_particles:stop()
	end
end

local pfx
local pfx_time = 100
local pfx_update = time_global()


function update_pfx()
	
	--if (true) then return end
	
--[[
	local vibrance = -0.1+level.get_rain_volume()*0.5
	vibrance = utils.clamp(vibrance,0,0.4)
	get_console():execute("r2_vibrance_val "..0.6-vibrance)
	get_console():execute("r2_aberration_val "..0.7-vibrance)
--]]
	if not extra_pfx_enabled then return end

	local weather = level_weathers.get_weather_manager():get_curr_weather()
	local rain_factor = level.get_rain_volume()
	local ambient = level_weathers.get_weather_manager():get_curr_ambient()
	
	if (bLevelUnderground) then
	
		if not pfx then
			pfx = particles_object("lanforse\\dust_particles")
		end
		
		local pos = db.actor:position()
		local apos = pos
		pos:add(device().cam_dir:mul(3))
		pos.y = apos.y+1
		
		if (not pfx:playing())then
			pfx:play_at_pos(pos)
			--printf("mist_play")
		end
	
	elseif (weather == "veryfoggy") 
	and ((level.get_time_hours() >= 5) and (level.get_time_hours() < 20))
	then
	
		if (not pfx) then
			if (level.name() == "l06_rostok") then
				pfx = particles_object("lanforse\\fog_green_dx10")
			else
				pfx = particles_object("lanforse\\fog_heavy_dx10")
			end
		end
		
		local pos = db.actor:position()
		pos.x = pos.x + 0
		pos.y = utils.clamp(pos.y,pos.y,1)+1
		pos.z = pos.z + 0
		
		if (rain_factor > 0.05) then
			if (time_global() > pfx_update) then
				pfx_update = time_global()+100
				pfx:play_at_pos(pos)
			end
		end
	elseif (weather == "foggy") or
	((weather == "veryfoggy") and ((level.get_time_hours() < 5) or (level.get_time_hours() >= 20)))
	then
	
		if not pfx then
			pfx = particles_object("lanforse\\fog_light")
		end
		
		local pos = db.actor:position()
		pos.x = pos.x + 0
		pos.y = utils.clamp(pos.y,pos.y,1)+0.5
		pos.z = pos.z + 0
		
		if (rain_factor > 0.05) then
			if (time_global() > pfx_update) then
				pfx_update = time_global()+100
				pfx:play_at_pos(pos)
			end
		end
	
	elseif (weather == "clear")  and (rain_factor > 0.05)
	and (level.get_time_hours() >= 4) and (level.get_time_hours() < 20) 
	then
	---[[	
		if not pfx then
			pfx = particles_object("lanforse\\fog_mist")
		end
		
		local pos = db.actor:position()
		local apos = pos.y
		pos:add(device().cam_dir:mul(80))
		pos.y = utils.clamp(apos,pos.y,6)+1
		
		if (not pfx:playing())then
			pfx:play_at_pos(pos)
			--printf("mist_play")
		end
	--]]
	elseif (weather == "storm") and (rain_factor > 0.5) 
	then	
		if (not pfx) then
			pfx = particles_object("lanforse\\storm_heavy")
		end
		
		local pos = db.actor:position()
		pos.x = pos.x + math.random(-10,10)
		pos.y = utils.clamp(pos.y,pos.y,20)
		pos.z = pos.z - 20
		
		if (time_global() > pfx_update) then
			pfx_update = time_global()+100
			pfx:play_at_pos(pos)
			--printf("storm_play: "..rain_factor)
		end
	
	elseif (weather == "cloudy") and (rain_factor > 0.5) and (ambient == "tuman")
	then	
		if (not pfx) then
			pfx = particles_object("lanforse\\snow_light")
		end
		
		local pos = db.actor:position()
		pos.y = pos.y+0
		pos:add(device().cam_dir:mul(5))
		
		if (time_global() > pfx_update) then
			pfx_update = time_global()+100
			pfx:play_at_pos(pos)
			--printf("snow_play: "..rain_factor)
		end	
		
		
		
	elseif (pfx and pfx:playing()) then
		pfx:stop()
	end

end