		--else
		--	self.curr_weather=self.next_weather
		--	self.next_weather=st.current_state
		--end
	end

	if (graph~=nil) then
		--printf("!weather_section_name = %s",weather_section_name)
		--printf("!self.levelWeather = %s",tostring(self.levelWeather))
