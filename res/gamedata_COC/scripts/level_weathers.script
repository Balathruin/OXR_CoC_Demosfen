function update_wind()

	local volume = math.floor(level.get_rain_volume()*100)
	--printf(tostring(volume))
	local wind_velocity = level_weathers.get_weather_manager():get_wind_velocity()
	local wind_k = wind_velocity/1000
		
	local sound1="wind_storm1"
	local sound2="wind_storm2"
	local sound3="wind_storm3"
	
	local volume1 = 0
	local volume2 = 0
	local volume3 = 0
	
	if (volume < 35) then
		volume1 = 60+volume
	end
	
	if (volume > 25) and (volume < 60) then
		volume1 = 70-volume
		volume2 = 35+volume
	end
	
	if (volume > 50) then
		volume1 = 0
		volume2 = 70-volume
		volume3 = volume
	end
	
	volume1 = volume1*wind_k
	volume2 = volume2*wind_k
	volume3 = volume3*wind_k
	
	volume1 = utils.clamp(volume1,0,100)
	volume2 = utils.clamp(volume2,0,100)
	volume3 = utils.clamp(volume3,0,100)
	
	
	--printf(volume1.." "..volume2.." "..volume3)
	
	---[[
